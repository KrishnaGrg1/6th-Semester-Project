<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Edit Profile</title>
    <link rel="icon" href="assets/favicon.png">
    <link rel="stylesheet" href="css/adminEditProfile.css">
</head>
<body>
    <header class="header">
        <a href="home">
            <img
          class="fimg"
          src="/assets/popcornlogo.png"
          alt="Popcornbox"
          class="logo"
        />
        </a>
        
        <nav class="nav">
          <a href="profiledetails">Profile Details</a>
          <a href="edit-profile">Edit Profile</a>
          
        </nav>
        
      </header>
      <div class="main">
    <div class="container">
        <div class="card">
            <h2>Edit Admin Profile</h2>
            <p>Welcome, <%= loggedInUser.fname %></p>

            <!-- User Selection Dropdown -->
            <form action="/admin-profile-update" method="POST" class="form-section">
                <h4>Select a User:</h4>
                <select name="userId" required>
                    <option value="">-- Select a user --</option>
                    <% users.forEach(user => { %>
                        <option value="<%= user._id %>" <%= user._id.toString() === userToEdit._id.toString() ? 'selected' : '' %>>
                            <%= user.fname %> <%= user.lname %> - <%= user.email %>
                        </option>
                    <% }) %>
                </select>
                <button type="submit" class="btn">Edit User</button>
            </form>

            <!-- User Profile Edit Form -->
            <form action="/admin-profile-update" method="POST" class="form-section">
        
                <input type="hidden" name="userId" value="<%= userToEdit._id %>">
                
                <label>First Name:</label>
                <input type="text" name="fname" value="<%= userToEdit.fname %>" required>
                
                <label>Last Name:</label>
                <input type="text" name="lname" value="<%= userToEdit.lname %>" required>
                
                <label>Email:</label>
                <input type="email" name="email" value="<%= userToEdit.email %>" required>
                
                <label>Password:</label>
                <div class="password-container">
                    <input type="password" name="password" id="password"   placeholder="New password">
                    <span class="toggle-password" onclick="togglePassword('password', this)">üëÅÔ∏è</span>
                </div>
                
                <button type="submit" class="btn">Update Profile</button>
            </form>
            <a href="home" class="back-link">‚Üê Back to Profile</a>
        </div>
    </div>
</div>
    <script>
        function togglePassword(id, element) {
            const passwordField = document.getElementById(id);
            passwordField.type = passwordField.type === "password" ? "text" : "password";
            element.textContent = passwordField.type === "password" ? "üëÅÔ∏è" : "üôà";
        }
    </script>
</body>
</html>
